-- Spawn the dead, and army builder zones.
function spawn_static_zones()
    delete_all_static_zones()
    Wait.frames(function()
        spawn_static_zones_after_deletion()
    end, 1)
end

-- Destroy the dead, and army builder zones.
function delete_all_static_zones()
    local all_objs = getAllObjects()
    for _,obj in ipairs(all_objs) do
        local name = obj.getName()
        if str_starts_with(name, 'dead zone') then
            -- This executes on next frame
            obj.destroy()
        end
        if str_starts_with(name, 'Army Builder') then
            -- This executes on next frame
            obj.destroy()
        end
    end
end


