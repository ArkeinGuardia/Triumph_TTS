g_current_numbers = {}
function draw_numbers_quadrant(size)    
    local params = {
        type = '3DText',
        position = { size['x'] / 4, 2, size['z'] / 4},
        rotation = { 90, 0, 0 }
    }
    local obj1 = spawnObject(params)
    obj1.setValue('1')
    table.insert(g_current_numbers, obj1)

