<Panel id="panel_dba_table_selection_bg" width="600" height="500" rectAlignment="MiddleCenter" active="false" raycastTarget="true">
    <Image image="select_table_bg_v2"></Image>
</Panel>
<Panel id="panel_dba_table_selection" width="600" height="500" rectAlignment="MiddleCenter" active="false" raycastTarget="true">
    <TableLayout padding="100 100 120 80" cellSpacing="20">
        <Row preferredHeight="40">
            <Cell columnSpan="6" dontUseTableCellBackground="true">
                <Text fontSize="20" alignment="MiddleLeft">Select the topography for the table:</Text>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="6" dontUseTableCellBackground="true">
                <ToggleGroup id="togglegroup_table_type" onValueChanged="on_toggle_table_type">
                    <TableLayout>
                        <Row>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Arable</Toggle>
                            </Cell>

                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Forest</Toggle>
                            </Cell>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Forest [Jungle]</Toggle>
                            </Cell>
                        </Row>
                        <Row>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Hilly</Toggle>
                            </Cell>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Dry</Toggle>
                            </Cell>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Steppe</Toggle>
                            </Cell>
                        </Row>
                                                <Row>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Delta</Toggle>
                            </Cell>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Marsh</Toggle>
                            </Cell>
                        </Row>
                    </TableLayout>
                </ToggleGroup>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="6" dontUseTableCellBackground="true">
                <Toggle id="toggle_3dterrain" isOn="true" onValueChanged="on_toggle_3dterrain" fontSize="16">Use 3D terrain</Toggle>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Text fontSize="20" alignment="MiddleLeft">Table size:</Text>
            </Cell>
            <Cell columnSpan="4" dontUseTableCellBackground="true">
                <ToggleGroup id="togglegroup_table_size" onValueChanged="on_toggle_table_size">
                    <HorizontalLayout>
                        <Toggle id="toggle_normalsize" isOn="false" fontSize="16">Standard, 64x96</Toggle>
                    </HorizontalLayout>
                </ToggleGroup>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Button columnSpan="2" fontSize="20" onClick="on_cancel_load_table">Cancel</Button>
            </Cell>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <!-- Filler -->
            </Cell>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Button fontSize="20" onClick="on_load_table">Load</Button>
            </Cell>
        </Row>
    </TableLayout>
</Panel>

<Panel id="panel_dba_troop_selection_bg" width="800" height="860" rectAlignment="MiddleCenter" active="false" raycastTarget="true">
    <Image image="select_army_bg_v2"></Image>
</Panel>
<Panel id="panel_dba_troop_selection" width="800" height="850" rectAlignment="MiddleCenter" color="#00000000" active="false" raycastTarget="true">
    <TableLayout padding="50 50 80 50 " cellSpacing="20">
        <Row preferredHeight="40">
            <Cell columnSpan="10" dontUseTableCellBackground="true">
                <Toggle id="toggle_filter_modes" onValueChanged="on_filter_models" alignment="MiddleLeft" fontSize="16">Filter armies with models</Toggle>
            </Cell>
            <Cell columnSpan="10" dontUseTableCellBackground="true">
                <Toggle id="toggle_use_plain_bases" onValueChanged="on_use_plain_bases" alignment="MiddleLeft" fontSize="16">Use plain bases</Toggle>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="3" dontUseTableCellBackground="true">
                <Text fontSize="20" alignment="MiddleLeft">Player:</Text>
            </Cell>
            <Cell columnSpan="17" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_playercolor" onValueChanged="on_playercolor_selected" fontSize="20">
                    <Option selected="true">Red</Option>
                    <Option>Blue</Option>
                </Dropdown>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="3" dontUseTableCellBackground="true">
                <Text fontSize="20" alignment="MiddleLeft">Theme:</Text>
            </Cell>
            <Cell columnSpan="17" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_book" onValueChanged="on_theme_selected" fontSize="20">
                    <Option selected="true">Book I</Option>
                    <Option>Book II</Option>
                    <Option>Book III</Option>
                    <Option>Book IV</Option>
                </Dropdown>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="3" dontUseTableCellBackground="true">
                <Text fontSize="20" alignment="MiddleLeft">Army:</Text>
            </Cell>
            <Cell columnSpan="17" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_army" onValueChanged="on_army_selected" fontSize="16" scrollSensitivity="20">
                    <Option selected="true">Army 1</Option>
                    <Option>Army 2</Option>
                    <Option>Army 3</Option>
                    <Option>Army 4</Option>
                </Dropdown>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="3" dontUseTableCellBackground="true">
                <Text fontSize="20" alignment="MiddleLeft">Year:</Text>
            </Cell>
            <Cell columnSpan="17" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_year" onValueChanged="on_year_selected" fontSize="16" scrollSensitivity="20">
                    <Option selected="true">40000 BCE to 3000 BCE</Option>
                    <Option>3000 BCE to 1 BCE</Option>
                    <Option>1 CE to 33 CE</Option>
                    <Option>1939 CE to 1945 CE</Option>
                </Dropdown>
            </Cell>
        </Row>
        <Row preferredHeight="320">
          <Cell columnSpan="3" dontUseTableCellBackground="true">
              <Text fontSize="20" alignment="MiddleLeft">Allies</Text>
          </Cell>
          <Cell columnSpan="17" dontUseTableCellBackground="true">
            <VerticalLayout childForceExpandHeight="false" childAlignment="UpperLeft">
                <Toggle id="toggle_ally_army_1"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army1</Toggle>
                <Toggle id="toggle_ally_army_2"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army2</Toggle>
                <Toggle id="toggle_ally_army_3"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army3</Toggle>
                <Toggle id="toggle_ally_army_4"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army4</Toggle>
                <Toggle id="toggle_ally_army_5"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army5</Toggle>
                <Toggle id="toggle_ally_army_6"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army6</Toggle>
                <Toggle id="toggle_ally_army_7"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army7</Toggle>
                <Toggle id="toggle_ally_army_8"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army8</Toggle>
                <Toggle id="toggle_ally_army_9"  isOn="false" onValueChanged="on_toggle_ally_army" active="false">army9</Toggle>
                <Toggle id="toggle_ally_army_10" isOn="false" onValueChanged="on_toggle_ally_army" active="false">army10</Toggle>
                <Toggle id="toggle_ally_army_11" isOn="false" onValueChanged="on_toggle_ally_army" active="false">army11</Toggle>
                <Toggle id="toggle_ally_army_12" isOn="false" onValueChanged="on_toggle_ally_army" active="false">army12</Toggle>
                <Toggle id="toggle_ally_army_13" isOn="false" onValueChanged="on_toggle_ally_army" active="false">army13</Toggle>
                <Toggle id="toggle_ally_army_14" isOn="false" onValueChanged="on_toggle_ally_army" active="false">army14</Toggle>
                <Toggle id="toggle_ally_army_15" isOn="false" onValueChanged="on_toggle_ally_army" active="false">army15</Toggle>
            </VerticalLayout>
          </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="5" dontUseTableCellBackground="true">
                <Button columnSpan="2" fontSize="20" onClick="on_cancel_load_army">Cancel</Button>
            </Cell>
            <Cell columnSpan="11" dontUseTableCellBackground="true">
                <!-- Filler -->
            </Cell>
            <Cell columnSpan="4" dontUseTableCellBackground="true">
                <Button id="button_load_army" columnSpan="1" fontSize="20" onClick="on_load_army">Load</Button>
            </Cell>
        </Row>
    </TableLayout>
</Panel>
