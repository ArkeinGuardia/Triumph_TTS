<Panel id="panel_dba_orders_bg" width="900" height="100" rectAlignment="LowerRight" color="#00000000" raycastTarget="true">
    <Image image="pip_counter_bg_v5"></Image>
</Panel>
<Panel id="panel_dba_orders" width="730" height="90" color="#00000000" rectAlignment="LowerRight" padding="40 -40 10 6" raycastTarget="true">
    <VerticalLayout>
        <HorizontalLayout>
            <Slider id="slider_MUs" minValue="0" maxValue="8" value="4" colors="#00000000|#00000000|#00000000|#00000000" backgroundcolor="#FFFFFFF" onValueChanged="slider_MUs_changed"></Slider>
        </HorizontalLayout>        
        <HorizontalLayout>
            <Button id="button_move_forward" onClick="move_bases">Move 4 MU</Button>
            <Button id="button_wheel" onClick="on_wheel">Wheel Group</Button>
        </HorizontalLayout>
    </VerticalLayout>
    <VerticalLayout>
        <Button id="button_push_back" onClick="on_push_back">Push back Column</Button>
        <Button id="button_undo_move" onClick="on_undo_move">Undo</Button>
        <Button id="button_redo_move" onClick="on_redo_move">Redo</Button>
    </VerticalLayout>
    <VerticalLayout>
        <Button id="button_spawn_table" onClick="on_create_table_menu">Spawn table</Button>
        <Button id="button_create_army" onClick="create_army_options_menu">Deploy an army</Button>
    </VerticalLayout>
    <VerticalLayout>
        <Toggle id="toggle_zoc" isOn="false" onValueChanged="on_toggle_zoc">Do not show ZOC</Toggle>
        <Toggle id="toggle_deployment_lines" isOn="false" onValueChanged="on_toggle_deployment_lines">Do not show rulers</Toggle>
        <Toggle id="toggle_snapping" isOn="true" onValueChanged="on_toggle_snapping">Snap bases</Toggle>
    </VerticalLayout>
</Panel>

